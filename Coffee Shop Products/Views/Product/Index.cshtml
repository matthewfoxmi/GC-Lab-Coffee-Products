@{
}

@{
    foreach(Coffee c in Model)
    {
        <div>
        <a asp-controller="Product" asp-action="ProductDetails" asp-route-productId="@c.Id">@c.Name</a>             
        <h3>$@c.Price</h3>         
        </div>
    }
}